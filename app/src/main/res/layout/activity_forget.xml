<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    tools:context="com.ruanmeng.cultural_center.ForgetActivity">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/dimen_size_5"
                android:src="@mipmap/icon_phone" />

            <EditText
                android:id="@+id/et_tel"
                style="@style/Font13_black_dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/dimen_size_5"
                android:src="@mipmap/icon_duanxin" />

            <EditText
                android:id="@+id/et_yzm"
                style="@style/Font13_black_dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1" />

            <Button
                android:id="@+id/bt_yzm"
                style="@style/Font12_light"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:background="@drawable/rec_bg_trans_stroke_b9b9b9"
                android:gravity="center"
                android:onClick="doClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/dimen_size_5"
                android:src="@mipmap/icon_lock" />

            <EditText
                android:id="@+id/et_pwd"
                style="@style/Font13_black_dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入6~20位新密码"
                android:inputType="textPassword"
                android:maxLength="20" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

        <Button
            android:id="@+id/bt_submit"
            style="@style/Font15_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:background="@mipmap/zhuce_kuang"
            android:onClick="doClick"
            android:text="提交" />

    </LinearLayout>

</LinearLayout>