<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.ruanmeng.fragment.MainFourthFragment">

    <include layout="@layout/layout_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/fourth_ll"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@mipmap/icon_bg_center"
        android:gravity="center_vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/fourth_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/dimen_size_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_touxiang"
            app:riv_border_color="@color/white"
            app:riv_border_width="2dp"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_size_15"
            android:layout_marginRight="@dimen/dimen_size_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fourth_name"
                style="@style/Font14_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <TextView
                android:id="@+id/fourth_phone"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="手机号" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_size_15"
            android:layout_height="@dimen/dimen_size_15"
            android:layout_marginLeft="@dimen/dimen_size_15"
            android:layout_marginRight="@dimen/dimen_size_15"
            android:src="@mipmap/bai_you"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <com.allen.library.SuperTextView
        android:id="@+id/fourth_act"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/margin_space"
        app:sBottomLineMargin="10dp"
        app:sLeftIconMarginLeft="@dimen/margin_space"
        app:sLeftIconRes="@mipmap/icon_center_1"
        app:sLeftIconSize="18dp"
        app:sLeftTextColor="@color/black_dark"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="我的活动"
        app:sLineShow="both"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/icon_you"
        app:sRightIconSize="15dp"
        app:sRightTextColor="@color/light"
        app:sRightTextMarginRight="30dp"
        app:sTopLineMargin="0dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/fourth_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="10dp"
        app:sLeftIconMarginLeft="@dimen/margin_space"
        app:sLeftIconRes="@mipmap/icon_center_2"
        app:sLeftIconSize="18dp"
        app:sLeftTextColor="@color/black_dark"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="我的场地预约"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/icon_you"
        app:sRightIconSize="15dp"
        app:sRightTextColor="@color/light"
        app:sRightTextMarginRight="30dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/fourth_collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="10dp"
        app:sLeftIconMarginLeft="@dimen/margin_space"
        app:sLeftIconRes="@mipmap/icon_center_3"
        app:sLeftIconSize="18dp"
        app:sLeftTextColor="@color/black_dark"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="我的收藏"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/icon_you"
        app:sRightIconSize="15dp"
        app:sRightTextColor="@color/light"
        app:sRightTextMarginRight="30dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/fourth_vol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="0dp"
        app:sLeftIconMarginLeft="@dimen/margin_space"
        app:sLeftIconRes="@mipmap/icon_center_4"
        app:sLeftIconSize="18dp"
        app:sLeftTextColor="@color/black_dark"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="我是志愿者"
        app:sLineShow="bottom"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/icon_you"
        app:sRightIconSize="15dp"
        app:sRightTextColor="@color/light"
        app:sRightTextMarginRight="30dp" />

</LinearLayout>
