<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_culture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/item_culture_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/not_4" />

        <TextView
            android:id="@+id/item_culture_title"
            style="@style/Font15_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#88000000"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_size_10"
            android:text="标题" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_space"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen_size_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_culture_time"
                style="@style/Font14_black_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间：" />

            <TextView
                android:id="@+id/item_culture_address"
                style="@style/Font14_black_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:text="地点：" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_culture_cancel"
            style="@style/Font14_black_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_bg_trans_stroke_blue"
            android:paddingBottom="@dimen/dimen_size_5"
            android:paddingEnd="@dimen/dimen_size_10"
            android:paddingStart="@dimen/dimen_size_10"
            android:paddingTop="@dimen/dimen_size_5"
            android:text="取消报名"
            android:textColor="@color/blue" />

    </LinearLayout>

</LinearLayout>