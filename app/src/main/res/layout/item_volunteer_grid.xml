<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_size_5"
    android:paddingTop="@dimen/dimen_size_5">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_volunteer_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_touxiang"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/item_volunteer_name"
        style="@style/Font13_black_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="名称" />

</LinearLayout>
