<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/volunteer_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:rollviewpager_hint_gravity="center"
        app:rollviewpager_play_delay="3000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/volunteer_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:padding="@dimen/margin_space">

        <TextView
            android:id="@+id/volunteer_hint"
            style="@style/Font14_black_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="类型" />

        <TextView
            style="@style/Font13_lighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginLeft="@dimen/dimen_size_3"
            android:src="@mipmap/hui_you" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:background="@color/divider" />

</LinearLayout>