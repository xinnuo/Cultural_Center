<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_culture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/item_culture_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/not_4" />

        <TextView
            android:id="@+id/item_culture_title"
            style="@style/Font15_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#88000000"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_size_10"
            android:text="标题" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_space"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_15">

        <TextView
            android:id="@+id/item_culture_time"
            style="@style/Font14_black_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="活动时间：" />

        <TextView
            android:id="@+id/item_culture_address"
            style="@style/Font14_black_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:text="活动地点：" />

        <TextView
            android:id="@+id/item_culture_status"
            style="@style/Font14_black_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:text="活动状态："
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>