<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/Font14_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_space"
            android:text="预约时间" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/book_edit_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

        <TextView
            style="@style/Font14_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_space"
            android:text="填写申请信息" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space">

            <TextView
                style="@style/Font14_black_dark"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="姓        名" />

            <EditText
                android:id="@+id/et_name"
                style="@style/Font13_black_dark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@android:color/white"
                android:hint="请输入您的姓名"
                android:maxLength="12"
                android:paddingLeft="@dimen/margin_space" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="@dimen/margin_space"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space">

            <TextView
                style="@style/Font14_black_dark"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="联系方式" />

            <EditText
                android:id="@+id/et_tel"
                style="@style/Font13_black_dark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@android:color/white"
                android:hint="请输入您的联系方式"
                android:maxLength="11"
                android:inputType="number"
                android:paddingLeft="@dimen/margin_space" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="@dimen/margin_space"
            android:background="@color/divider" />

        <TextView
            style="@style/Font14_black_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_space"
            android:text="预约用途" />

        <EditText
            android:id="@+id/et_content"
            style="@style/Font13_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_bg_f7f7f7_stroke_cccccc"
            android:gravity="top"
            android:hint="请填写您的预约用途~（150字以内）"
            android:maxLength="150"
            android:minLines="5"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="@dimen/margin_space"
            android:padding="10dp" />

        <Button
            android:id="@+id/book_submit"
            style="@style/Font15_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rec_ova_bg_white_stroke_blue"
            android:onClick="doClick"
            android:text="预约"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>