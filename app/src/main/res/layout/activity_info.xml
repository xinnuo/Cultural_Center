<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruanmeng.cultural_center.InfoActivity">

    <LinearLayout
        android:id="@+id/info_img_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_space"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space"
        android:paddingTop="@dimen/margin_space">

        <TextView
            style="@style/Font14_black_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/info_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="@dimen/dimen_size_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_touxiang"
            app:riv_oval="true" />

        <ImageView
            android:layout_width="@dimen/dimen_size_15"
            android:layout_height="@dimen/dimen_size_15"
            android:layout_marginLeft="@dimen/dimen_size_5"
            android:src="@mipmap/hui_you" />

    </LinearLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/info_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        app:sBottomLineMargin="0dp"
        app:sLeftTextColor="@color/black_dark"
        app:sLeftTextMarginLeft="@dimen/margin_space"
        app:sLeftTextString="昵称"
        app:sLineShow="both"
        app:sRightIconMarginRight="@dimen/margin_space"
        app:sRightIconRes="@mipmap/hui_you"
        app:sRightIconSize="15dp"
        app:sRightTextColor="@color/black_dark"
        app:sRightTextMarginRight="30dp" />

    <Button
        android:id="@+id/bt_save"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rec_ova_bg_white_stroke_blue"
        android:text="保存"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

</LinearLayout>