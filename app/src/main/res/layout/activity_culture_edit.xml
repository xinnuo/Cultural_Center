<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Font14_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_space"
        android:text="活动详情" />

    <TextView
        android:id="@+id/culture_address"
        style="@style/Font13_black_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:text="活动地点：" />

    <TextView
        android:id="@+id/culture_people"
        style="@style/Font13_black_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:text="活动人数：" />

    <TextView
        android:id="@+id/culture_time"
        style="@style/Font13_black_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_15"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:text="活动时间：" />

    <TextView
        style="@style/Font14_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_space"
        android:text="填写报名信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space">

        <TextView
            style="@style/Font14_black_dark"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="姓        名" />

        <EditText
            android:id="@+id/et_name"
            style="@style/Font13_black_dark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/white"
            android:hint="请输入您的姓名"
            android:maxLength="12"
            android:paddingLeft="@dimen/margin_space" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space">

        <TextView
            style="@style/Font14_black_dark"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="联系方式" />

        <EditText
            android:id="@+id/et_tel"
            style="@style/Font13_black_dark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/white"
            android:hint="请输入您的联系方式"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/margin_space" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space">

        <TextView
            style="@style/Font14_black_dark"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="参与人数" />

        <ImageView
            android:id="@+id/culture_remove"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:onClick="doClick"
            android:padding="@dimen/dimen_size_10"
            android:src="@drawable/ic_remove_circle_light_24dp" />

        <TextView
            android:id="@+id/culture_account"
            style="@style/Font14_black_dark"
            android:layout_width="@dimen/dimen_size_10"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="1" />

        <ImageView
            android:id="@+id/culture_add"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:onClick="doClick"
            android:padding="@dimen/dimen_size_10"
            android:src="@drawable/ic_add_circle_light_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <Button
        android:id="@+id/culture_submit"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rec_ova_bg_white_stroke_blue"
        android:onClick="doClick"
        android:text="立即报名"
        android:textColor="@color/colorAccent" />

</LinearLayout>